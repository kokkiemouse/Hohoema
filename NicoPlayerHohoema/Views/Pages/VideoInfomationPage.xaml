<Page x:Class="NicoPlayerHohoema.Views.VideoInfomationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:NicoPlayerHohoema.Views"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="using:NicoPlayerHohoema.Views.Controls"
      xmlns:i="using:Microsoft.Xaml.Interactivity"
      xmlns:core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:toolkit="using:WinRTXamlToolkit.Controls"
      xmlns:uwptoolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
      xmlns:iconPack="using:MahApps.Metro.IconPacks"
      xmlns:mvvm="using:Prism.Mvvm"
      xmlns:hardTrigger="using:AdaptiveTriggerLibrary.Triggers.HardwareInterfaceTriggers"
      xmlns:mybehavior="using:NicoPlayerHohoema.Views.Behaviors"
      xmlns:uwpExtensions="using:Microsoft.Toolkit.Uwp.UI.Extensions"
      DataContext="{x:Null}"
      NavigationCacheMode="Enabled"
      mc:Ignorable="d">
  <Grid>
    
    <ScrollViewer>
      <toolkit:DockPanel x:Name="ContentLayout"
                         Margin="8 0 0 0">
        <!-- NG投稿者指定された動画の情報 -->
        <Border toolkit:DockPanel.Dock="Top"
                Visibility="{Binding IsSelfZoningContent, Converter={StaticResource BooleanToVisibility}}"
                Margin="0 16"
                Padding="16"
                BorderBrush="DarkRed"
                BorderThickness="2">
          <toolkit:WrapPanel Orientation="Horizontal">
            <StackPanel Orientation="Horizontal">
              <iconPack:PackIconMaterial Kind="Information"
                                         Margin="0 0 16 0"
                                         Width="32"
                                         Height="32"
                                         VerticalAlignment="Center" />
              <TextBlock FontSize="20"
                         Margin="0 0 0 8">
                                    <Run Text="この動画はフィルタ指定されています" />
                                    <LineBreak />
                                    <Run Text="{Binding SelfZoningInfo.NGReason}" />
                                    <Run Text=":" />
                                    <Run Text="{Binding SelfZoningInfo.Content}" />
                                    <Run Text="{Binding SelfZoningInfo.Description}" /></TextBlock>
            </StackPanel>
            <Button Content="フィルタ設定を確認する"
                    Command="{Binding OpenFilterSettingPageCommand}"
                    Margin="0 0 0 0" />
          </toolkit:WrapPanel>
        </Border>
        <!-- ヘッダー ページタイトルやサムネイル -->
        <StackPanel toolkit:DockPanel.Dock="Top"
                    x:Name="HeaderLayout">
          <toolkit:DockPanel>
            <Grid Width="226"
                  Height="164"
                  x:Name="ThumbnailImageLayout"
                  toolkit:DockPanel.Dock="Left"
                  Margin="8 0">
              <uwptoolkit:ImageEx Source="{Binding VideoInfo.ThumbnailUrl}"
                                  x:Name="ThumbnailImage"
                                  IsTabStop="False"></uwptoolkit:ImageEx>
              <Border Padding="4"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Bottom"
                      Margin="0 0">
                <Border.Background>
                  <SolidColorBrush Color="{ThemeResource SystemAltMediumColor}" />
                </Border.Background>
                <TextBlock VerticalAlignment="Center"
                           FontSize="18">
                                    <Run Text="{Binding VideoInfo.Length, Converter={StaticResource TimeToMovieLengthConverter}}" /></TextBlock>
              </Border>
            </Grid>
            <StackPanel Margin="8 16 0 8"
                        toolkit:DockPanel.Dock="Bottom">
              <StackPanel Orientation="Horizontal"
                          Margin="0 0 0 0">
                <TextBlock Margin="0 0 8 0">
                                    <Run Text="再生:"
                                         Foreground="{StaticResource ApplicationSecondaryForegroundThemeBrush}" />
                                    <Run Text="{Binding VideoInfo.ViewCount, Converter={StaticResource ToUserFriendlyNumber}}" /></TextBlock>
                <TextBlock Margin="0 0 8 0">
                                    <Run Text="コメント:"
                                         Foreground="{StaticResource ApplicationSecondaryForegroundThemeBrush}" />
                                    <Run Text="{Binding VideoInfo.CommentCount, Converter={StaticResource ToUserFriendlyNumber}}" /></TextBlock>
                <TextBlock Margin="0 0 8 0">
                                    <Run Text="マイリスト:"
                                         Foreground="{StaticResource ApplicationSecondaryForegroundThemeBrush}" />
                                    <Run Text="{Binding VideoInfo.MylistCount, Converter={StaticResource ToUserFriendlyNumber}}" /></TextBlock>
              </StackPanel>
              <TextBlock Margin="0 8 0 0">
                                    <Run Text="投稿日:"
                                         Foreground="{StaticResource ApplicationSecondaryForegroundThemeBrush}" />
                                    <Run Text="{Binding VideoInfo.PostedAt, Converter={StaticResource DateTimeToString}}" /></TextBlock>
            </StackPanel>
            <Border Background="Transparent"
                    IsHitTestVisible="True"
                    Margin="8 0 48 0">
              <TextBlock Text="{Binding VideoInfo.Title}"
                         VerticalAlignment="Center"
                         Style="{StaticResource SubtitleTextBlockStyle}"
                         TextWrapping="Wrap"
                         x:Name="VideoTitleTextBlock"></TextBlock>
            </Border>
          </toolkit:DockPanel>
        </StackPanel>
        <CommandBar toolkit:DockPanel.Dock="Top"
                    HorizontalAlignment="Left"
                    Margin="8 16 8 16">
          <CommandBar.SecondaryCommands>
            <AppBarButton x:Name="AddSubscriptionButton"
                          Label="投稿者動画を購読"
                          Icon="Add">
              <AppBarButton.Flyout>
                <MenuFlyout>
                  <i:Interaction.Behaviors>
                    <mybehavior:MenuFlyoutItemsSetter ItemsSource="{Binding SubscriptionManager.Subscriptions}"
                                                      CustomObjectToTag="{Binding SubscriptionSource}">
                      <mybehavior:MenuFlyoutItemsSetter.ItemTemplate>
                        <DataTemplate>
                          <MenuFlyoutItem Text="{Binding Label}"
                                          Command="{Binding AddSource}"
                                          CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Tag}" />
                        </DataTemplate>
                      </mybehavior:MenuFlyoutItemsSetter.ItemTemplate>
                    </mybehavior:MenuFlyoutItemsSetter>
                  </i:Interaction.Behaviors>
                  <MenuFlyoutItem Text="購読グループを作成..."
                                  Command="{Binding CreateSubscriptionGroupCommand}"
                                  CommandParameter="{Binding Converter={StaticResource SubscriptionSourceConverter}}" />
                </MenuFlyout>
              </AppBarButton.Flyout>
            </AppBarButton>
            <AppBarButton Label="ブラウザで開く"
                          Command="{Binding ExternalAccessService.OpenLinkCommand}"
                          CommandParameter="{Binding VideoInfo}" />
            <AppBarButton Label="コピー...">
              <AppBarButton.Flyout>
                <MenuFlyout>
                  <MenuFlyoutItem Text="リンクをコピー"
                                  Command="{Binding ExternalAccessService.CopyToClipboardCommand}"
                                  CommandParameter="{Binding VideoInfo}" />
                  <MenuFlyoutItem Text="動画IDをコピー"
                                  Command="{Binding ExternalAccessService.CopyToClipboardCommand}"
                                  CommandParameter="{Binding VideoInfo.RawVideoId}" />
                  <MenuFlyoutItem Text="共有用文章をコピー"
                                  Command="{Binding ExternalAccessService.CopyToClipboardWithShareTextCommand}"
                                  CommandParameter="{Binding VideoInfo}" />
                </MenuFlyout>
              </AppBarButton.Flyout>
            </AppBarButton>
          </CommandBar.SecondaryCommands>
          <AppBarButton Icon="Play"
                        Label="再生"
                        Command="{Binding HohoemaPlaylist.PlayCommand}"
                        CommandParameter="{Binding VideoInfo}" />
          <AppBarButton Icon="Download"
                        Label="キャッシュ取得"
                        Command="{Binding VideoCacheManager.AddCacheRequestCommand}"
                        CommandParameter="{Binding VideoInfo}"
                        Visibility="{Binding CanDownload, Converter={StaticResource BooleanToVisibility}}" />
          <AppBarButton Icon="Add"
                        Label="マイリストに追加"
                        Command="{Binding AddMylistCommand}"
                        CommandParameter="{Binding VideoInfo}" />
          <AppBarButton x:Name="ShareSubButton"
                        Label="共有"
                        Command="{Binding ExternalAccessService.OpenShareUICommand}"
                        CommandParameter="{Binding VideoInfo}" />
          <AppBarButton x:Name="ShareSubButton_TV"
                        Visibility="Collapsed"
                        Command="{Binding ExternalAccessService.OpenShareUICommand}"
                        CommandParameter="{Binding VideoInfo}"
                        Content="共有" />
        </CommandBar>
        <toolkit:DockPanel>
          <!-- コンテンツ -->
          <Pivot x:Name="Pivot">
            <i:Interaction.Behaviors>
              <core:DataTriggerBehavior Binding="{x:Bind Pivot.SelectedIndex, Mode=OneWay}"
                                        Value="1">
                <core:CallMethodAction TargetObject="{Binding}"
                                       MethodName="InitializeIchibaItems" />
              </core:DataTriggerBehavior>
              <core:DataTriggerBehavior Binding="{x:Bind Pivot.SelectedIndex, Mode=OneWay}"
                                        Value="2">
                <core:CallMethodAction TargetObject="{Binding}"
                                       MethodName="InitializeRelatedVideos" />
              </core:DataTriggerBehavior>
            </i:Interaction.Behaviors>
            <!-- 投稿者・タグ・動画説明 -->
            <PivotItem x:Name="VideoDescPivotItem"
                       Header="動画説明">
              <StackPanel>
                <TextBlock Text="タグ"
                           Style="{StaticResource SubtitleTextBlockStyle}" />
                <ItemsControl ItemsSource="{Binding VideoDetals.Tags}"
                              Margin="0 8"
                              x:Name="TagsList"
                              IsTabStop="False">
                  <ItemsControl.ItemTemplate>
                    <DataTemplate>
                      <Button Margin="0 0 0 0"
                              Command="{Binding ElementName=TagsList, Path=DataContext.PageManager.OpenPageCommand}"
                              CommandParameter="{Binding}">
                        <TextBlock Text="{Binding Tag}" />
                      </Button>
                    </DataTemplate>
                  </ItemsControl.ItemTemplate>
                  <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                      <Setter Property="Padding"
                              Value="0 0 8 8" />
                    </Style>
                  </ItemsControl.ItemContainerStyle>
                  <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                      <uwptoolkit:WrapPanel Orientation="Horizontal"
                                            Margin="0 0 48 0" />
                    </ItemsPanelTemplate>
                  </ItemsControl.ItemsPanel>
                </ItemsControl>
                <Border Height="16" />
                <TextBlock Text="投稿者"
                           Style="{StaticResource SubtitleTextBlockStyle}" />
                <StackPanel Orientation="Horizontal"
                            Margin="0 8 0 16">
                  <Button>
                    <StackPanel Orientation="Horizontal">
                      <Image Source="{Binding VideoDetals.OwnerIconUrl}"
                             Height="36"
                             Width="36" />
                      <TextBlock Text="{Binding VideoDetals.ProviderName}"
                                 VerticalAlignment="Center"
                                 Margin="8 0 0 0" />
                    </StackPanel>
                    <Button.Flyout>
                      <MenuFlyout>
                        <MenuFlyoutItem Text="投稿者の詳細"
                                        Command="{Binding PageManager.OpenContentOwnerPageCommand}"
                                        CommandParameter="{Binding VideoDetals}" />
                        <MenuFlyoutItem Text="動画一覧"
                                        Command="{Binding PageManager.OpenVideoListPageCommand}"
                                        CommandParameter="{Binding VideoInfo.RawVideoId}"></MenuFlyoutItem>
                      </MenuFlyout>
                    </Button.Flyout>
                  </Button>
                </StackPanel>
                <TextBlock Text="動画説明"
                           Style="{StaticResource SubtitleTextBlockStyle}" />
                <WebView Source="{Binding DescriptionHtmlFileUri}"
                         MinWidth="320"
                         Margin="0 8 16 8"
                         DefaultBackgroundColor="Transparent"
                         ScrollViewer.VerticalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollMode="Disabled"
                         xmlns:myExtensions="using:NicoPlayerHohoema.Views.Extensions"
                         myExtensions:WebView.IgnoreScrolling="True"
                         myExtensions:WebView.UriNotifyCommand="{Binding ScriptNotifyCommand}"
                         >
                  <i:Interaction.Behaviors>
                    <mybehavior:WebViewAutoResizeToContent />
                    <!-- WebViewでUINavigationControllerがハマるバグに対応する -->
                    <mybehavior:PreventSpoilerXYNavigationInWebView />
                  </i:Interaction.Behaviors>
                </WebView>
                <uwptoolkit:Expander Margin="0 16 0 8"
                                     HorizontalContentAlignment="Left">
                  <uwptoolkit:Expander.HeaderTemplate>
                    <DataTemplate>
                      <TextBlock Text="動画紹介のリンク" />
                    </DataTemplate>
                  </uwptoolkit:Expander.HeaderTemplate>
                  <GridView ItemsSource="{Binding VideoDescriptionHyperlinkItems, Mode=OneWay}"
                                uwpExtensions:ListViewBase.Command="{Binding ScriptNotifyCommand}"
                            IsItemClickEnabled="True"
                                HorizontalContentAlignment="Stretch"
                                Visibility="{Binding VideoDescriptionHyperlinkItems, Converter={StaticResource CollectionVisibilityConverter}}"
                                Margin="0 8"
                                IsTabStop="False">
                    <ItemsControl.ItemTemplate>
                      <DataTemplate>
                        <TextBlock Text="{Binding Label}" TextDecorations="Underline" Foreground="{ThemeResource SystemAccentColor}" />
                      </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemContainerStyle>
                      <Style TargetType="GridViewItem">
                        <Setter Property="Padding"
                                Value="8 4" />
                        <Setter Property="HorizontalContentAlignment"
                                Value="Stretch" />
                        <Setter Property="BorderThickness"
                                Value="1" />
                      </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemsPanel>
                      <ItemsPanelTemplate>
                        <uwptoolkit:WrapPanel Orientation="Horizontal" />
                      </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                  </GridView>
                </uwptoolkit:Expander>
              </StackPanel>
            </PivotItem>
            <!-- ニコニコ市場 -->
            <PivotItem x:Name="IchibaPivotItem"
                       Header="市場">
              <Grid>
                <TextBlock Text="No items"
                           Opacity="0.6"
                           Margin="16"
                           Visibility="{Binding IchibaItems, Mode=OneWay, Converter={StaticResource EmptyCollectionVisibilityConverter}}" />
                <ItemsControl ItemsSource="{Binding IchibaItems}"
                              IsTabStop="False">
                  <ItemsControl.ItemTemplate>
                    <DataTemplate>
                      <controls:IchibaItemCard />
                    </DataTemplate>
                  </ItemsControl.ItemTemplate>
                  <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                      <Setter Property="Margin"
                              Value="0 0 16 8" />
                    </Style>
                  </ItemsControl.ItemContainerStyle>
                  <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                      <uwptoolkit:WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                  </ItemsControl.ItemsPanel>
                </ItemsControl>
              </Grid>
            </PivotItem>
            <!-- 関連動画 -->
            <PivotItem x:Name="RelatedVideosPivotItem"
                       Header="関連動画">
              <Grid>
                <TextBlock Text="No items"
                           Opacity="0.6"
                           Margin="16"
                           Visibility="{Binding RelatedVideos, Mode=OneWay, Converter={StaticResource EmptyCollectionVisibilityConverter}}" />
                <ListView ItemsSource="{Binding RelatedVideos, Mode=OneWay}"
                          uwpExtensions:ListViewBase.Command="{Binding HohoemaPlaylist.PlayCommand}"
                          IsItemClickEnabled="True"
                          SelectionMode="None"
                          SingleSelectionFollowsFocus="False"
                          ItemContainerStyle="{StaticResource VideoListViewItemStyle}">
                  <ListView.ItemTemplate>
                    <DataTemplate>
                      <local:VideoInfoControl />
                    </DataTemplate>
                  </ListView.ItemTemplate>
                </ListView>
              </Grid>
            </PivotItem>
          </Pivot>
          <Grid>
            <Border x:Name="LoadingLayout"
                    Visibility="{Binding NowLoading.Value, Converter={StaticResource BooleanToVisibility}}">
              <ProgressRing IsActive="{Binding NowLoading.Value}"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="32"
                            Height="64"
                            Width="64" />
            </Border>
            <Border x:Name="FailedLayout"
                    Visibility="{Binding IsLoadFailed.Value, Converter={StaticResource BooleanToVisibility}}"
                    Background="#77000000">
              <StackPanel>
                <TextBlock Text="動画情報の読み込みに失敗しました" />
                <Button Content="再読み込み"
                        Command="{Binding UpdateCommand}" />
                <HyperlinkButton Content="ブラウザーで開く"
                                 Command="{Binding ExternalAccessService.OpenLinkCommand}"
                                 CommandParameter="{Binding}" />
              </StackPanel>
            </Border>
          </Grid>
        </toolkit:DockPanel>
      </toolkit:DockPanel>
    </ScrollViewer>
    <VisualStateManager.VisualStateGroups>
      <!-- トップバー表示時のタイトル位置ずらし -->
      <VisualStateGroup>
        <VisualState>
          <VisualState.StateTriggers>
            <StateTrigger IsActive="{StaticResource IsTVModeEnabled}" />
          </VisualState.StateTriggers>
          <VisualState.Setters>
            <Setter Target="ContentLayout.Margin"
                    Value="48 27 0 0" />
            <Setter Target="Pivot.Margin"
                    Value="0 0 48 27" />
          </VisualState.Setters>
        </VisualState>
        <VisualState>
          <VisualState.StateTriggers>
            <AdaptiveTrigger MinWindowWidth="{StaticResource WidthBreakPoint_WideToMiddle}" />
          </VisualState.StateTriggers>
          <VisualState.Setters></VisualState.Setters>
        </VisualState>
        <VisualState>
          <VisualState.StateTriggers>
            <AdaptiveTrigger MinWindowWidth="0" />
          </VisualState.StateTriggers>
          <VisualState.Setters>
            <Setter Target="ContentLayout.Margin"
                    Value="0" />
            <Setter Target="ThumbnailImage.Stretch"
                    Value="Fill" />
            <Setter Target="ThumbnailImageLayout.(toolkit:DockPanel.Dock)"
                    Value="Top" />
            <Setter Target="HeaderLayout.Margin"
                    Value="16 0" />
            <Setter Target="VideoTitleTextBlock.Style"
                    Value="{StaticResource SubtitleTextBlockStyle}" />
          </VisualState.Setters>
        </VisualState>
      </VisualStateGroup>
      <!-- シェアボタンの表示 -->
      <VisualStateGroup>
        <VisualState>
          <VisualState.StateTriggers>
            <hardTrigger:DeviceFamilyTrigger Condition="Desktop" />
          </VisualState.StateTriggers>
          <VisualState.Setters>
            <Setter Target="ShareSubButton.Icon"
                    Value="Share" />
          </VisualState.Setters>
        </VisualState>
        <VisualState>
          <VisualState.StateTriggers>
            <hardTrigger:DeviceFamilyTrigger Condition="Xbox" />
          </VisualState.StateTriggers>
          <VisualState.Setters>
            <Setter Target="ShareSubButton.Visibility"
                    Value="Collapsed" />
            <Setter Target="ShareSubButton_TV.Visibility"
                    Value="Visible" />
            <Setter Target="ShareSubButton.Icon"
                    Value="Share" />
          </VisualState.Setters>
        </VisualState>
      </VisualStateGroup>
      <!-- ページ読み込み状態 -->
      <VisualStateGroup>
        <VisualState>
          <VisualState.StateTriggers>
            <StateTrigger IsActive="{Binding NowLoading.Value}" />
          </VisualState.StateTriggers>
          <VisualState.Setters>
            <Setter Target="ContentLayout.Visibility"
                    Value="Collapsed" />
          </VisualState.Setters>
        </VisualState>
        <VisualState>
          <VisualState.StateTriggers>
            <StateTrigger IsActive="{Binding IsLoadFailed.Value}" />
          </VisualState.StateTriggers>
          <VisualState.Setters></VisualState.Setters>
        </VisualState>
      </VisualStateGroup>
    </VisualStateManager.VisualStateGroups>
  </Grid>
</Page>
